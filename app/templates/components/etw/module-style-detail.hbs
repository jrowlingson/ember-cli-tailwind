<div class='etw-fixed etw-w-64 etw-p-4 etw-bg-grey-lighter rounded etw-mt-8'>

  {{#if moduleStyle}}

  <h3 class="font-semibold">{{moduleName}}</h3>
    <div class="etw-my-8">
      {{etw/module-style-example moduleStyle=moduleStyle}}
    </div>

    <div class="etw-mt-4">
      <h4 class='etw-inline-block etw-pr-2 etw-font-semibold'>Responsive: </h4>
      <div class="etw-mt-2 etw-text-sm etw-inline-block">
        {{#each (array 'all' 'sm' 'md' 'lg' 'xl') as |breakpoint|}}
          <a href='#'
            {{action (mut activeResponsiveClass) breakpoint}}
            class='
              etw-no-underline
              etw-text-black
              etw-pr-2
              {{if (eq activeResponsiveClass breakpoint) 'etw-opacity-100' 'etw-opacity-25'}}
            '
          >
            {{breakpoint}}
          </a>
        {{/each}}
      </div>
    </div>

    <div class="etw-mt-4">
      <h4 class='etw-inline-block etw-pr-2 etw-font-semibold'>State: </h4>
      <div class="etw-mt-2 etw-text-sm etw-inline-block">
        {{#each (array 'none' 'hover' 'focus') as |state|}}
          <a href='#'
            {{action (mut activeState) state}}
            class='
              etw-no-underline
              etw-text-black
              etw-pr-2
              {{if (eq activeState state) 'etw-opacity-100' 'etw-opacity-25'}}
            '
          >
            {{state}}
          </a>
        {{/each}}
      </div>
    </div>

    <div class="etw-mt-8 etw-mb-4">
      <p class='etw-text-right etw-text-xs etw-opacity-50'>
        {{#if highlightedStyle}}
          Copied!
        {{else}}
          Click to copy
        {{/if}}
      </p>

      <ul class='etw-mt-3 etw-list-reset'>
        {{#each detailStyles as |style|}}
          <li class='etw-mt-2'>
            {{#copy-button class=(concat
                'rounded-sm etw-bg-grey-light etw-opacity-75 hover:etw-opacity-100 '
                'etw-px-2 etw-py-2 etw-w-full etw-text-left etw-transition '
                (if (eq highlightedStyle style) 'etw-bg-green etw-text-white'))
              clipboardText=style
              title='Copy'
              success=(action 'highlightStyle' style)}}
              <code class="etw-font-mono etw-text-xs etw-text-purple-dark">.{{style}}</code>
            {{/copy-button}}
          </li>
        {{/each}}
      </ul>
    </div>

  {{else}}

    <p class='etw-mt-4 etw-text-grey etw-italic'>Select a module for more detail.</p>

  {{/if}}

</div>
